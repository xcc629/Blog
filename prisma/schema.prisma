// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(VISITANT)
  posts     Post[]

  @@map("users")
}

model Post {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  title      String
  published  Boolean    @default(false)
  author     User       @relation(fields: [authorId], references: [id])
  authorId   Int
  series Series @relation( fields: [seriesTitle] ,references: [title])
  seriesTitle String

  @@map("posts")
  @@index([authorId])
  @@index([seriesTitle])
}

model Series {
  id    Int    @id @default(autoincrement())
  title  String @unique
  imgPath String
  descrition String
  posts Post[]

  @@map("series")
}


enum Role {
  VISITANT
  ADMIN
}